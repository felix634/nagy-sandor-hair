---
// src/components/Services.astro
const services = [
    { name: "Női Hajvágás & Szárítás", price: "8.500 Ft" },
    { name: "Férfi Hajvágás (Fade & Classic)", price: "5.500 Ft" },
    { name: "Komplett Festés & Vágás", price: "22.000 Ft-tól" },
    { name: "Melír (Rövid/Hosszú Hajra)", price: "18.000 Ft-tól" },
    { name: "Kozmetikai Szolgáltatás (Alap)", price: "9.000 Ft" },
];
---
<section id="services" class="py-20">
    <div class="max-w-6xl mx-auto px-4">
        <h2 class="text-center text-4xl font-bold text-white mb-12 uppercase" data-motion-scroll>Szolgáltatások & Árak</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {services.map((service, index) => (
                <div class="p-6 border-silver-thin rounded-lg hover:shadow-silver transition duration-300" data-motion-scroll>
                    <div class="flex justify-between items-center mb-2">
                        <h3 class="text-xl font-semibold text-silver">{service.name}</h3>
                        <span class="text-lg font-bold text-white">{service.price}</span>
                    </div>
                    <p class="text-sm text-gray-500">
                        {index === 0 && "Professzionális hajmosás, fejmasszázs és styling."}
                        {index === 1 && "Precíz vágás, szakálligazítás kérésre."}
                        {index === 2 && "Tartós, élénk színek, prémium termékekkel."}
                        {index === 3 && "Finom átmenetek és természetes hatás."}
                        {index === 4 && "Tisztítás, masszázs, hidratálás."}
                    </p>
                </div>
            ))}
        </div>
    </div>
</section>